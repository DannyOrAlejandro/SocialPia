<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card animate__animated animate__flipInY animate__slow">
                <div class="card-body">
                    <form action="/links/add" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Title" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="url" name="url" class="form-control" placeholder="URL">
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="2" class="form-control" placeholder="Descripton"></textarea>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block" onclick="url()">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>